{
    "app": {
        "name": "forum-api",
        "environment": "localhost",
        "debug": true,
        "defaultLanguage": "en-US"
    },
    "server": {
        "host": "127.0.0.1",
        "maintenance": false,
        "protocol": "http",
        "domain": "",
        "port": 8080,
        "httpsPort": 8081,
        "timeout": 10,
        "maxUploadSize": 10,
        "tls": {
            "cert": "",
            "key": ""
        }
    },
    "database": {
        "connection": "sqlite3",
        "name": "database/dev.db",
        "options": "",
        "maxOpenConnections": 20,
        "maxIdleConnections": 20,
        "maxLifetime": 300,
        "autoMigrate": true
    },
    "auth": {
        "jwt": {
            "expiry": 900,
            "secret": "${ACCESS_TOKEN_SECRET}",
            "refreshExpiry": 86400,
            "refreshSecret": "${REFRESH_TOKEN_SECRET}"
        }
    }
}